@model Ator

@{
    ViewData["Title"] = "Index";
}

<h1>Atores e Atrizes</h1>

<hr />

<div class="row">
    <div class="col">
        <h2>Cadastro</h2>
        <mensagem texto="@TempData["msg"]"></mensagem>
        <form asp-action="cadastrar">
            <div class="form-group">
                <label asp-for="Nome"></label>
                <input asp-for="Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DataNascimento"></label>
                <input asp-for="DataNascimento" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Genero"></label>
                <select asp-for="Genero" class="form-control" asp-items="@Html.GetEnumSelectList<GeneroAtor>()">
                    <option>Selecione</option>
                </select>
            </div>
            <input type="submit" value="Cadastrar" class="btn btn-primary" />
        </form>
    </div>
    <div class="col">
        <h2>Listagem</h2>
        <table class="table">
            <tr>
                <th>Nome</th>
                <th>Data Nascimento</th>
                <th>Gênero</th>
            </tr>
            @foreach (var item in ViewBag.atores)
            {
                <tr>
                    <td>@item.Nome</td>
                    <td>@item.DataNascimento.ToShortDateString()</td>
                    <td>@item.Genero</td>
                </tr>
            }
        </table>
    </div>
</div>

